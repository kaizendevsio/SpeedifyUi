@inherits LayoutComponentBase

<div class="min-h-screen flex flex-col bg-gray-100 font-inter">

    <header class="hidden sm:block bg-white shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex-shrink-0">
                    <a href="/" class="text-2xl font-bold text-blue-600 hover:text-blue-700 transition-colors">
                        X Network
                    </a>
                </div>

                <nav class="flex items-center space-x-4 lg:space-x-6">
                    <NavLink href="/" Match="NavLinkMatch.All" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-200 hover:text-gray-900 transition-colors" ActiveClass="bg-blue-100 text-blue-700">Adapters</NavLink>
                    <NavLink href="/statistics" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-200 hover:text-gray-900 transition-colors" ActiveClass="bg-blue-100 text-blue-700">Stats</NavLink>
                    <NavLink href="/controls" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-200 hover:text-gray-900 transition-colors" ActiveClass="bg-blue-100 text-blue-700">Controls</NavLink>
                </nav>
            </div>
        </div>
    </header>
    
    <main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-6 pb-20 sm:pb-6">
        @Body
    </main>

    <footer class="sm:hidden fixed inset-x-0 bottom-0 bg-white border-t border-gray-200 shadow-md z-50">
        <nav class="container mx-auto px-2 flex justify-around items-center h-16">
            <NavLink href="/" Match="NavLinkMatch.All" class="flex flex-col items-center justify-center text-gray-600 hover:text-blue-600 transition-colors w-1/3 pt-1 pb-1 group" ActiveClass="text-blue-600 border-t-2 border-blue-600">
                <svg class="h-6 w-6 mb-1 group-[.active]:text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 12h9.75m-9.75 6h9.75M3.75 6h1.5m-1.5 6h1.5m-1.5 6h1.5" />
                </svg>
                <span class="text-xs font-medium group-[.active]:text-blue-600">Adapters</span>
            </NavLink>

            <NavLink href="/statistics" class="flex flex-col items-center justify-center text-gray-600 hover:text-blue-600 transition-colors w-1/3 pt-1 pb-1 group" ActiveClass="text-blue-600 border-t-2 border-blue-600">
                <svg class="h-6 w-6 mb-1 group-[.active]:text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
